<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#F7F3C6">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:fadeScrollbars="false"
        android:layout_marginRight="30dp"
        android:layout_weight="0.94"
        >
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:layout_marginTop="7dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Jellow remembers the user’s “most-used/preferred” icons and displays them as the top choices on the screen "
                    android:layout_margin="2dp"
                    android:textSize="14dp"
                    android:lines="2"
                    android:maxLines="4"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:id="@+id/tv1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="By resetting preferences, the icons will be set to the original order in which they were displayed the first time the application was opened"
                    android:layout_margin="2dp"
                    android:textSize="14dp"
                    android:id="@+id/tv2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Do you want to reset preferences?"
                    android:layout_margin="2dp"
                    android:textSize="14dp"
                    android:id="@+id/tv3"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:weightSum="1"
        android:background="#f7e2ac"
        android:layout_weight="2"
        android:paddingTop="8dp"
        android:gravity="center_vertical">

        <Button
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:text="yes"
            android:layout_weight=".002"
            android:id="@+id/yes"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp"
            android:background="#FFBEBCB6"
            />

        <Button
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:text="no"
            android:layout_weight=".002"
            android:id="@+id/no"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp"
            android:background="#FFBEBCB6"/>
    </LinearLayout>
</LinearLayout>

