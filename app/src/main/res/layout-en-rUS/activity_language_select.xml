<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="#F6F4E8"
    tools:context="com.dsource.idc.jellowintl.LanguageSelectActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="19dp"
        android:fadeScrollbars="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:text="@string/bullet"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/change_language_line2"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp" />
            </LinearLayout>


            <Spinner
                android:id="@+id/selectDownloadedLanguageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveBut"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#FFBEBCB6"
                android:text="@string/saveLanguage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:text="@string/bullet"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:scrollHorizontally="true"
                    android:text="@string/change_language_line1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:text="@string/bullet"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:text="@string/change_language_line3"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#F7E2AC">



        <Button
            android:id="@+id/addBut"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="#FFBEBCB6"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/addLanguage" />

        <Button
            android:id="@+id/delBut"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:background="#FFBEBCB6"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/deleteLanguage" />

    </LinearLayout>





</RelativeLayout>
