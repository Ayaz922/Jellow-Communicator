<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:background="#F7F3C6"
    android:weightSum="1"
    android:isScrollContainer="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".12">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingTop="10dp"
            android:paddingLeft="23dp"
            android:paddingRight="5dp"
            android:fadeScrollbars="false"
            android:layout_marginRight="30dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="10dp"
            android:isScrollContainer="false"
            android:paddingBottom="28dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/childName"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:id="@+id/tvCaregiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/careGiveName"
                    android:paddingTop="28dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/etFathername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:id="@+id/tvCaregiverNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/careGiverContact"
                    android:textColor="#000000"
                    android:paddingTop="28dp"
                    android:inputType="textPersonName"/>
                <EditText
                    android:id="@+id/etFathercontact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:id="@+id/tvHomeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/homeAddress"
                    android:textColor="#000000"
                    android:paddingTop="28dp"/>
                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:inputType="textPostalAddress"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:id="@+id/tvEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emailAddress"
                    android:textColor="#000000"
                    android:paddingTop="28dp"/>
                <EditText
                    android:id="@+id/etEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:id="@+id/tvBloodGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bloodGroup"
                    android:textColor="#000000"
                    android:paddingTop="28dp"/>
                <Spinner
                    android:id="@+id/bloodgroup"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".87"
        android:background="#f7e2ac"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/bSave"
            android:layout_marginLeft="22dp"
            android:text="@string/txtSave"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#FFBEBCB6" />
    </LinearLayout>
</LinearLayout>
