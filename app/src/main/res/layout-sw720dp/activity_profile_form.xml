<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:background="#F7F3C6"
    android:weightSum="1"
    android:isScrollContainer="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".12">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingTop="10dp"
            android:paddingLeft="23dp"
            android:paddingRight="5dp"
            android:fadeScrollbars="false"
            android:layout_marginRight="30dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="10dp"
            android:isScrollContainer="false"
            android:paddingBottom="28dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child's Name *"
                    android:id="@+id/tvName"
                    android:textColor="#000000"
                    android:textSize="18sp"/>-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint="Child's Name *"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caregiver's Name"
                    android:paddingTop="28dp"
                    android:textColor="#000000"
                    android:id="@+id/tvCaregiverName"
                    android:textSize="18sp"/>-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etFathername"
                    android:textSize="20sp"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:hint="Caregiver's Name"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caregiver's Contact No. *"
                    android:textColor="#000000"
                    android:paddingTop="28dp"
                    android:id="@+id/tvCaregiverNo"
                    android:textSize="18sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/etFathercontact"
                    android:textSize="20sp"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Address"
                    android:textColor="#000000"
                    android:paddingTop="28dp"
                    android:id="@+id/tvHomeAddress"
                    android:textSize="18sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etAddress"
                    android:textSize="20sp"
                    android:inputType="textPostalAddress"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address *"
                    android:textColor="#000000"
                    android:paddingTop="28dp"
                    android:id="@+id/tvEmailAddress"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etEmailId"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group"
                    android:textColor="#000000"
                    android:paddingTop="28dp"
                    android:id="@+id/tvBloodGrp"
                    android:textSize="18sp"/>
                <Spinner
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bloodgroup" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".87"
        android:id="@+id/ll"
        android:background="#f7e2ac"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/bSave"
            android:layout_marginLeft="22dp"
            android:text="SAVE"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:background="#FFBEBCB6" />
    </LinearLayout>
</LinearLayout>
