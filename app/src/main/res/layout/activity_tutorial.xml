<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll"
    android:background="#F7F3C6"
    android:weightSum="1"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingTop="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_weight="0.8"
        android:id="@+id/sv"
        android:fadeScrollbars="false"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="1dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/catBtnDesc"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/catBtn"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv7"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/categorybuttons"
                        android:id="@+id/pic1"
                        android:layout_marginTop="-13dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/expBtn"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv8"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/expressivebuttons"
                        android:id="@+id/pic2"
                        android:layout_marginTop="-13dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/jellowUsageDesc"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv2"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/speakingwithjellowimage2"
                        android:id="@+id/pic4"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/jellowUsageSubCat"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv3"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/levelOneCat"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv9"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/eatingcategory1"
                        android:id="@+id/pic5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/levelTwoCat"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv10"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/eatingcategory2"
                        android:id="@+id/pic6"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/levelThreeCat"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv11"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/eatingcategory3"
                        android:id="@+id/pic7"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/settingDesc"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv4"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/settings"
                        android:id="@+id/pic8"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/seqActDesc"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv5"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/toiletSeq"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv12"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/sequencewithoutexpressivebuttons"
                        android:id="@+id/pic9"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/expBtnSeq"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tv13"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/sequencewithexpressivebuttons"
                        android:id="@+id/pic10"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/ttsDesc"
                        android:layout_margin="6dp"
                        android:textSize="14dp"
                        android:id="@+id/tvtts"
                        />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="185dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/gtts1"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/gtts2"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/gtts3"
                            android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="•"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="@string/softwareVersion"
                    android:layout_margin="6dp"
                    android:textSize="14dp"
                    android:id="@+id/tv6"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>