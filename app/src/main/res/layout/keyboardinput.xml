<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#F7F3C6">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voice Control: "
                android:fontFamily="fonts/Mukta-Regular.ttf"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:id="@+id/tvvc"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight=".99"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="20dp"
                        android:paddingLeft="20dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:fontFamily="fonts/Mukta-Regular.ttf"
                        android:textColor="#000000"
                        android:paddingRight="0dp"
                        android:textSize="13dp"
                        android:text="1.Activate Google TTS"
                        android:id="@+id/tvtop"
                        />
                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="20dp"
                        android:paddingLeft="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="fonts/Mukta-Regular.ttf"
                        android:textColor="#000000"
                        android:paddingRight="0dp"
                        android:textSize="13dp"
                        android:text="2. Change default language to Hindi"
                        android:id="@+id/tvtop1"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="fonts/Mukta-Regular.ttf"
                        android:textColor="#000000"
                        android:paddingRight="32dp"
                        android:layout_marginLeft="-0dp"
                        android:textSize="13dp"
                        android:text="3. Download Hindi voice"
                        android:id="@+id/tvtop2"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="185dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/gtts1"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/gtts2"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/gtts3"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp">
                    <Button
                        android:layout_width="180dp"
                        android:layout_height="28dp"
                        android:layout_margin="6dp"
                        android:paddingBottom="0dp"
                        android:layout_weight="0.82"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:paddingLeft="45dp"
                        android:paddingRight="64dp"
                        android:id="@+id/tvbottom"
                        android:fontFamily="fonts/Mukta-Regular.ttf"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:onClick="getStarted1"
                        android:text="ACTIVATE"
                        android:background="#FFBEBCB6"/>
                    <Button
                        android:layout_width="215dp"
                        android:layout_height="28dp"
                        android:background="#FFBEBCB6"
                        android:layout_margin="6dp"
                        android:paddingBottom="0dp"
                        android:layout_weight="0.82"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:id="@+id/tvbottom1"
                        android:fontFamily="fonts/Mukta-Regular.ttf"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:onClick="getStarted2"
                        android:text="CHANGE LANGUAGE"/>

                    <Button
                        android:layout_width="215dp"
                        android:layout_height="28dp"
                        android:background="#FFBEBCB6"
                        android:layout_margin="6dp"
                        android:paddingBottom="0dp"
                        android:layout_weight="0.82"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:paddingLeft="54dp"
                        android:paddingRight="64dp"
                        android:id="@+id/tvbottom2"
                        android:fontFamily="fonts/Mukta-Regular.ttf"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:onClick="getStarted3"
                        android:text="DOWNLOAD"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyboard Control: "
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:fontFamily="fonts/Mukta-Regular.ttf"
                    android:textColor="#000000"
                    android:id="@+id/tvkc"
                    android:layout_marginLeft="22dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="To enable a keyboard of your choice and make it as default, you need to complete 2 steps:"
                android:id="@+id/t1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="9dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_weight="0.10" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="â€¢"
                        android:layout_margin="11dp"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Step 1: Enable Keyboard from device settings"
                        android:id="@+id/t2"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="7dp"
                        android:paddingLeft="9dp"
                        android:textColor="#000000"
                        android:textSize="14dp"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="24dp"
                android:gravity="center_vertical"
               >

                <Button
                    android:layout_width="230dp"
                    android:layout_height="28dp"
                    android:text="QWERTY"
                    android:textStyle="bold"
                    android:layout_weight=".001"
                    android:id="@+id/qwerty"
                    android:textSize="11dp"
                    android:background="#FFBEBCB6"
                    />

                <Button
                    android:layout_width="230dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="90dp"
                    android:text="SERIAL ABC"
                    android:id="@+id/abc"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:layout_weight=".001"
                    android:background="#FFBEBCB6"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="â€¢"
                        android:layout_margin="11dp"
                        android:gravity="center"
                        />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Step 2: Save Keyboard as default option"
                android:id="@+id/t3"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="7dp"
                android:paddingLeft="9dp"
                android:textColor="#000000"
                android:textSize="14dp"/>
        </LinearLayout>

            </LinearLayout>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:weightSum="1"
        android:layout_weight="0.1"
        android:paddingTop="0dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">
        <Button
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:text="Save as Default"
            android:layout_weight=".002"
            android:id="@+id/default_button"
            android:layout_gravity="center_horizontal"
            android:textSize="11dp"
            android:textStyle="bold"
            android:background="#FFBEBCB6"
            />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


